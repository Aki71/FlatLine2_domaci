@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        var emailPrefix = User.Identity?.Name?.Split('@')[0];
    
        <li class="nav-item">
            <form style="pointer-events: none !important;">
                <button type="submit" id="btn">Zdravo, @emailPrefix!</button>
            </form>
        </li>
    // Extract the part of the email before the @
    <li class="nav-item">
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" id="btn">Odjavi se</button>
        </form>
    </li>
    
    
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
            <button id="btn">Sign Up</button>
        </a>
    </li>
}
</ul>
