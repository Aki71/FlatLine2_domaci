@model FlatLine.Models.Course

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h1>Brisanje</h1>
<h3>Da li ste sigurni da želite da obrišete ovaj kurs?</h3>
<hr />
<div class="hero" style="gap:80px;">
    <div class="hero-content">
        <dl class="row">
            <dt class="col-sm-4">
                Ime
            </dt>
            <hr />
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4">
                Kratka deskripcija
            </dt>
            <hr />
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortDescription)
            </dd>
            <dt class="col-sm-4">
                Duga deskripcija
            </dt>
            <hr />
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LongDescription)
            </dd>
            <dt class="col-sm-4">
                Cena
            </dt>
            <hr />
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-4">
                Trajanje
            </dt>
            <hr />
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration)
            </dd>
        </dl>
    </div>
   
    <div class="hero-image">
        @if (Model.ProfilePicture != null)
        {
            <img src="@Url.Action("GetProfilePicture", "Courses", new { id = Model.Id })" alt="Course Picture" class="course-image" />
        }
        else
        {
            <div class="no-image">No Image Available</div>
        }
        <div />
</div>
    
</div>

<form asp-action="Delete" style="text-align:center;">
    <input type="hidden" asp-for="Id" />
    <button id="btn" type="submit" value="Obriši" style="border:4px solid #0a5045;margin-right:10px;">Obriši</button>
</form>

    <div style="text-align:right;width:100%;font-weight:bold;">
        <a asp-action="Index">Nazad na kurseve</a>
    </div>
