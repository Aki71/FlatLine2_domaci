@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 style="text-align:center;margin-bottom:15px;">@ViewData["Title"]</h1>
<div class="row" style="justify-content:center;">
    <div class="col-md-4" style="text-align:center;">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password bnm</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <p>
                        
                    <p style="margin-top:10px;">Nisi registrovan? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Registruj se ovde.</a></p>
                    </p>
                </div>
                <div>
                    <button id="btn" type="submit" class="w-100" style="border: 2px solid #0a5025;">Log in</button>
                </div>
               
            </form>
        </section>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
